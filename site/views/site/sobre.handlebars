            <h2 class="title">Sobre Empresa</h2>

        {{#each aboutsCompanies}}
            <div class="about-content">
                <div class="column left">
                    <img src="{{image}}" alt="{{title}}">
                </div>
                <div class="column right">
                    <div class="text">
                        {{title}}
                    </div>
                    <p>{{description}}</p>
                </div>
            </div>
            {{/each}}
           
        </div>
    </section>
